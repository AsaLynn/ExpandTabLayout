<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    package="com.zxn.tablayoutsamples"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name="com.zxn.tablayoutsamples.ui.SimpleHomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="growing.8bc34b006bab3450" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.zxn.tablayoutsamples.ui.CommonTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.zxn.tablayoutsamples.ui.SlidingTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.zxn.tablayoutsamples.ui.SegmentTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.zxn.tablayoutsamples.ui.ShadowTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.zxn.tablayoutsamples.ui.SingleShadowTabActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.zxn.tablayoutsamples.ui.SlidingScaleTabLayoutFragmentActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.SlidingScaleTabLayoutFragmentActivity"
            android:screenOrientation="portrait"
            tools:ignore="DuplicateActivity" />

        <activity
            android:name=".ui.SlidingScaleTabLayoutActivity2"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.SlidingScaleTabLayoutActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>



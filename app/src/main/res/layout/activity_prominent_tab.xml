<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@android:color/darker_gray"
    android:layout_height="match_parent"
    tools:context=".ui.ProminentTabActivity">

    <com.zxn.tablayout.ProminentTabLayout
        android:id="@+id/prominentTabA"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        app:indicatorTopLeftRadius="6dp"
        app:indicatorTopRightRadius="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabContainerBackground="@drawable/sp_rec_bg_tab_container_coin"
        app:tl_indicator_color="#ffffff"
        app:tl_indicator_height="48dp"
        app:tl_indicator_margin_bottom="0dp"
        app:tl_textSelectColor="#111A34"
        app:tl_textSize="12sp"
        app:tl_textUnselectColor="#ffffff" />

    <com.zxn.tablayout.ProminentTabLayout
        android:id="@+id/prominentTabB"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFEB3B"
        android:paddingTop="5dp"
        app:indicatorTopLeftRadius="6dp"
        app:indicatorTopRightRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/prominentTabA"
        app:tabContainerBackground="@drawable/sp_rec_bg_tab_container_coin"
        app:tl_indicator_color="#ffffff"
        app:tl_indicator_height="55dp"
        app:tl_indicator_margin_bottom="0dp"
        app:tl_textSelectColor="#111A34"
        app:tl_textSize="12sp"
        app:tl_textUnselectColor="#ffffff" />

    <com.zxn.tablayout.ProminentTabLayout
        android:id="@+id/prominentTabC"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingBottom="14dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:paddingTop="5dp"
        app:indicatorTopLeftRadius="6dp"
        app:indicatorTopRightRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/prominentTabB"
        app:tabContainerBackground="@drawable/sp_rec_bg_tab_container_coin"
        app:tl_indicator_color="#ffffff"
        app:tl_indicator_height="55dp"
        app:tl_indicator_margin_bottom="0dp"
        app:tl_textSelectColor="#111A34"
        app:tl_textSelectSize="15sp"
        app:tl_textUnSelectSize="12sp"
        app:tl_textUnselectColor="#ffffff" />

    <FrameLayout
        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/sp_rec_bg_tab_content"
        app:layout_constraintTop_toTopOf="@id/prominentTabC" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zxn.tablayoutsamples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SimpleHomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="growing.8bc34b006bab3450" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.CommonTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.SlidingTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.SegmentTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.ShadowTabActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.SingleShadowTabActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.SlidingScaleTabLayoutFragmentActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".ui.SlidingScaleTabLayoutFragmentActivity"
            android:screenOrientation="portrait"
            tools:ignore="DuplicateActivity" />

        <activity
            android:name=".ui.SlidingScaleTabLayoutActivity2"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.SlidingScaleTabLayoutActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>


